<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/spinnerRutas"

    tools:context="com.busme_usuario.fragments.BusMeUsuario" />


    <Spinner
        android:id="@+id/spinnerRutas"
        android:layout_width="fill_parent"
        android:prompt="@string/spinner_titulo"
        android:layout_height="50dp" />
    <Switch
        android:id="@+id/switchRuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerRutas"
        android:textColor="@android:color/black"
        android:text="Cambiar sentido de la ruta"
        android:theme="@android:style/Theme.Material"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchRuta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:visibility="invisible"
        android:id="@+id/txtTiempoEstimado" />

    <TextView
        android:text="  Amplia"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="43dp"
        android:id="@+id/identificador1"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="  Baja    "
        android:background="@android:color/white"
        android:textColor="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/identificador2"
        android:layout_alignStart="@+id/identificador2"
        android:id="@+id/identificador3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="  "
        android:layout_width="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/identificador2"
        android:layout_alignStart="@+id/textView4"
        android:id="@+id/textView5" />

    <TextView
        android:text="  "
        android:background="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_toStartOf="@+id/identificador2"
        android:id="@+id/textView6" />

    <TextView
        android:text="Disponibilidad"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_above="@+id/identificador1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="  Media "
        android:textColor="@android:color/holo_orange_light"
        android:background="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/identificador2"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="  "
        android:background="@android:color/holo_blue_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

</RelativeLayout>